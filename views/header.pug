div.container
    div.row
        div(class='col col-lg-8 col-sm-9 col-9')
            div.row
                div(class='col col-lg-6 col-md-6 col-sm-7 col-12 logo site-name col-12')
                    a(href='/')
                        img(
                            src='/images/shopper.png'
                        )
                        span Shopper.ru
                div(class="col col-lg-6 col-md-6 col-sm-5 col-12 d-none d-sm-block d-md-block site-description")
                    div.row
                        div(class="col text-center")
                            span(class="site-phone") 8-900-999-99-99
                    div.row
                        div(class="col text-center")
                            span(class="text-muted") Простой магазин
        div(class='col col-lg-4 col-sm-3 col-3 text-right pl-0')
            div(class="pb-4")
                div(class="dropdown")
                    if auth
                        if auth.login == 'admin'
                            button(type="button" class="btn login dropdown-toggle auth-block-active pl-0" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false") #{auth.login}
                            div(class='dropdown-menu dropdown-menu-right' aria-labelledby="auth")
                                a(href='/admin' class='dropdown-item') Управление
                                a(href='/logout' class='dropdown-item') Выход
                        else
                            button(type="button" class="btn login dropdown-toggle auth-block-active pl-0" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false") #{auth.login}
                            div(class='dropdown-menu dropdown-menu-right' aria-labelledby="auth")
                                a(href='/user' class='dropdown-item') Профиль
                                a(href='/logout' class='dropdown-item') Выход
                    else
                        button(type="button" class="btn btn-primary site-btn auth-block" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false")
                            i(class="fa fa-sign-in" aria-hidden="true")
                        div(class='dropdown-menu dropdown-menu-right' aria-labelledby="auth")
                            a(href='/admin' class='dropdown-item') Вход
                            a(href='/signup' class='dropdown-item') Регистрация

