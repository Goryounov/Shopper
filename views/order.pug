include header
    include site_header_order

div(class='container py-3')
    div(class='row g-3')
        div(class='col-md-5 col-lg-4 order-md-last mb-3')
            h3(class="cart-header py-3 text-center") Корзина
            div(id='cart-nav')
        div(class='col-md-7 col-lg-8')
            h3(class="text-center order-title py-3") Сделать заказ
            form#lite-shop-order(action="" class='needs-validation')
                div(class='col-12 mb-3')
                    label(for='firstName' class="form-label") Имя
                    input(
                        type='text',
                        id='firstName',
                        class='form-control',
                        value=`${auth.first_name}`,
                        name="firstName"
                    )
                div(class='col-12 mb-3')
                    label(for='lastName' class="form-label") Фамилия
                    input(
                        type='text',
                        id='lastName',
                        class='form-control',
                        value=`${auth.last_name}`,
                        name="lastName"
                    )
                div(class='col-12 mb-3')
                    label(for='phone' class="form-label") Телефон
                    input(
                        type='text',
                        id='phone',
                        placeholder=`${auth.phone ? '' : 'Введите телефон'}`,
                        class='form-control',
                        value=`${auth.phone ? auth.phone : ''}`,
                        name="phone"
                    )
                div(class='col-12 mb-3')
                    label(for='email' class="form-label") Email
                    input(
                        type='text',
                        id='email',
                        placeholder=`${auth.email ? '' : 'Введите email'}`,
                        class='form-control',
                        value=`${auth.email ? auth.email : ''}`,
                        name="email"
                    )
                div(class='col-12 mb-3')
                    label(for='address' class="form-label") Адрес
                    input(
                        type='text',
                        id='address',
                        placeholder=`${auth.address ? '' : 'Введите адрес'}`,
                        class='form-control',
                        value=`${auth.address ? auth.address : ''}`,
                        name="address"
                    )
                div(class='col-12 my-3 text-center')
                    label(for='rule' class="form-label")
                        input(
                            type='checkbox',
                            id='rule',
                            value='1'
                            class='form-check-input'
                        )
                        span  Даю согласие на обработку персональных данных
                div(class='col-12 text-center pb-5')
                    button(class='btn btn-primary site-btn', type='submit') Завершить заказ

    include footer.pug
    script(src='js/order.js')