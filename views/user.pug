include header
    include site_header

div(class='container py-5')
    h3.text-center #{auth.login}
    hr
    div.row
        div(class='col col-lg-6 col-sm-12 col-12')
            h5.py-3 Информация о пользователе
            if message
                div(class='alert alert-success col-sm-12') #{message}
            form(action="/user/update", method="POST" class='needs-validation form-login')
                div(class='col-12 mb-3')
                    label(for='firstName' class="form-label") Имя
                    input(
                        type='text',
                        id='firstName',
                        placeholder='Enter your first name',
                        class='form-control'
                        value=`${auth.first_name}`,
                        name="firstName"
                    )
                div(class='col-12 mb-3')
                    label(for='lastName' class="form-label") Фамилия
                    input(
                        type='text',
                        id='lastName',
                        placeholder='Enter your last name',
                        class='form-control'
                        value=`${auth.last_name}`,
                        name="lastName"
                    )
                div(class='col-12 mb-3')
                    label(for='phone' class="form-label") Телефон
                    input(
                        type='text',
                        id='phone',
                        placeholder='Введите телефон',
                        class='form-control'
                        value=`${auth.phone ? auth.phone : 'Введите телефон'}`,
                        name="phone"
                    )
                div(class='col-12 mb-3')
                    label(for='email' class="form-label") Email
                    input(
                        type='text',
                        id='email',
                        placeholder='Введите email',
                        class='form-control'
                        value=`${auth.email ? auth.email : 'Введите email'}`,
                        name="email"
                    )
                div(class='col-12 mb-3')
                    label(for='address' class="form-label") Адрес
                    input(
                        type='text',
                        id='address',
                        placeholder='Введите адрес',
                        class='form-control'
                        value=`${auth.address ? auth.address : 'Введите адрес'}`,
                        name="address"
                    )
                div(class='col-12 text-center py-3')
                    button(class='btn btn-primary site-btn', type='submit') Изменить
        div(class='col col-lg-6 col-sm-12 col-12 pb-5')
            h5.py-3 Заказы
            if orders
                table.table
                    tr
                        th №
                        th Дата
                        th Заказчик
                        th Позиции
                        th Количество позиций
                        th Итого
                        each val, index in orders
                            tr
                                td #{index + 1}
                                td #{val[0].date}
                                td #{val[0].login}
                                td
                                    ul.list-unstyled
                                        each val1 in val
                                            li #{val1.name}
                                    //td #{val.date}
                                    ////td #{val['goods_cost'].toFixed(2).replace(/\d(?=(\d{3})+\.)/g, '$& ')} ₽
                                    //each index in val
                                    //    td #{val[index].user_id}
                                td
                                    ul.list-unstyled
                                        each val1 in val
                                            li #{val1.goods_amount}
                                td
                                    ul.list-unstyled
                                        each val1 in val
                                            li #{val1.total.toFixed(2).replace(/\d(?=(\d{3})+\.)/g, '$& ')} ₽
                                    -
                                        let total = 0;
                                        val.forEach(function (item, index) {
                                            total += item.total;
                                        })
                                    span Всего: #{total.toFixed(2).replace(/\d(?=(\d{3})+\.)/g, '$& ')} ₽

            else
                span Заказов пока нет :(
    include footer
